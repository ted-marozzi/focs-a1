    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc.exe build all",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "-Wall",
                "-std=c99",
                "-lm",
                "*.c",
                "-o",
                "flow"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}